h1 = t('view.listing', model: t('activerecord.models.use', count: @uses.count))

table
  thead
    tr
      th = Use.human_attribute_name :name
      th
      th
      th

  tbody
    - @uses.each do |use|
      tr
        td = use.name
        td = link_to t('view.show'), use
        td = link_to t('view.edit'), edit_use_path(use)
        td = link_to t('view.destroy'), use, data: { confirm: t('message.delete_confirm') }, method: :delete

br

= link_to t('view.new', model: Use.model_name.human), new_use_path

br

fieldset
  legend = t('view.batch_processing')
  span = t('view.import')
  - if alert
    p#alert = alert
  = form_tag(import_uses_path, multipart: true) do
    = file_field_tag :file
    = submit_tag t('view.import')
  br
  = link_to t('view.export'), export_uses_path(format: 'csv'), method: :get
